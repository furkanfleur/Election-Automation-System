@model IEnumerable<ElectionAutomationSystem.Models.Vote>

@{
    ViewBag.Title = "Index";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Election Automation System</a>
    </li>
    <li class="breadcrumb-item active">Regions / Votes / Index</li>
</ol>
<p>
    <a class="navbar-brand" href="@(Url.Action("Create", "Votes"))"><button type="button" class="btn btn-primary">Create New</button></a>
</p>

<!-- Example DataTables Card-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Votes
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Vote Count</th>
                        <th>Ballot Box Id</th>
                        <th>Party Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VoteCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BallotBox.BallotBoxNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Party.PartyName)
                        </td>
                        <td>
                            <a class="navbar-brand" href="@(Url.Action("Edit", "Votes", new { id = item.VoteId }))"><button type="button" class="btn btn-info">Edit</button></a>
                            <a class="navbar-brand" href="@(Url.Action("Details", "Votes", new { id = item.VoteId }))"><button type="button" class="btn btn-warning">Details</button></a>
                            <a class="navbar-brand" href="@(Url.Action("Delete", "Votes", new { id = item.VoteId }))"><button type="button" class="btn btn-danger">Delete </button></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>